{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://portfolio.example/schemas/project",
  "title": "Project",
  "description": "A portfolio project entry",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer",
      "description": "Unique identifier for the project"
    },
    "image": {
      "type": "string",
      "description": "Path to project image"
    },
    "title": {
      "type": "string",
      "description": "Project title"
    },
    "desc": {
      "type": "string",
      "description": "Short description of the project"
    },
    "lang": {
      "type": "string",
      "description": "Technologies used (comma-separated)"
    },
    "link": {
      "type": "string",
      "format": "uri",
      "description": "Live project URL"
    },
    "repo": {
      "type": "string",
      "format": "uri",
      "description": "Repository URL"
    },
    "category": {
      "type": "string",
      "enum": ["Projects", "Contributions"],
      "description": "Project category"
    },
    "services": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of achievements or features"
    }
  },
  "required": ["id", "image", "title", "desc", "lang", "link", "repo", "category", "services"]
}
