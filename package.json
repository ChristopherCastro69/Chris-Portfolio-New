{
  "name": "chris-portfolio",
  "version": "1.0.0",
  "private": true,
  "description": "Personal portfolio monorepo with React frontend and Python FastAPI backend",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:frontend": "npm run start --workspace=packages/frontend",
    "build:frontend": "npm run build --workspace=packages/frontend",
    "test:frontend": "npm run test --workspace=packages/frontend",
    "dev:backend": "cd packages/backend && uvicorn app.main:app --reload --port 8000",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "lint": "npm run lint --workspace=packages/frontend",
    "prepare": "echo 'Monorepo ready'"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
